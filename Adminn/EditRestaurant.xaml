<Page x:Class="Adminn.EditRestaurant"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditRestaurant">

    <Grid Background="white">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="Black"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Nom du restaurant"
               Grid.Row="0"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="NomRestaurantTextBox" Grid.Row="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Adresse"
               Grid.Row="1"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="AdresseRestaurant" Grid.Row="1"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Numéro GSM"
               Grid.Row="2"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="NumeroGSM" Grid.Row="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Nom de propriètaire"
               Grid.Row="3"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="NomProprietaire" Grid.Row="3"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Mot de passe"
               Grid.Row="4"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <PasswordBox x:Name="MotDePasse" Grid.Row="4"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>

            <Button Content="SAVE" Grid.Row="6" Width="100" Height="30" Background="#FF00FF27" Margin="10" Click="EditRestaurant1"/>
            



        </Grid>
    </Grid>
</Page>
