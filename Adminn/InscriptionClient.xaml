<Page x:Class="Adminn.InscriptionClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InscriptionClient">

    <Grid Background="white">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="Black"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Nom du client"
               Grid.Row="0"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="NomClientTextBox" Grid.Row="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Prénom du client"
               Grid.Row="1"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="FirstNameClient" Grid.Row="1"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Numéro GSM"
               Grid.Row="2"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="NumeroGSM" Grid.Row="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="adresse du Client"
               Grid.Row="3"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="AdressClient" Grid.Row="3"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>


            <Label Content="Mot de passe"
               Grid.Row="4"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               FontSize="16" Margin="10,10,0,0"/>
            <TextBox x:Name="MotDePasse" Grid.Row="4"
                 HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Margin="10,40,10,0"
                 Background="#FFE1DDDD" Height="29"/>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="SIGNIN" Grid.Row="5" Width="100" Height="30" Background="Red" Margin="10" Click="sauvgarderNouveuRestaurant"/>
                <Button Content="LOGIN" Grid.Row="6" Width="100" Height="30" Background="#FF00FF27" Margin="10" Click="GoToLogin"/>
            </StackPanel>



        </Grid>
    </Grid>
</Page>