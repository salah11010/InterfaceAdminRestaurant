<Window x:Class="Adminn.AskIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demande d'ID" Height="150" Width="300" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Margin="10">
        <TextBlock Text="Veuillez entrer l'ID :" Margin="0,0,0,5"/>
        <TextBox x:Name="IdTextBox" Margin="15,0,106,0" Height="32" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="44" Height="23" Click="OkButton_Click"/>
            <Button Content="Annuler" Width="44" Height="23" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
