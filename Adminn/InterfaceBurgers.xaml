<Page x:Class="Adminn.InterfaceBurgers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InterfaceBurgers">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="Black"/>
            <Border Grid.Column="1" Background="White"/>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Content="Burgers" Background="BlanchedAlmond"  Margin="70,18,70,18" Click="Button_Click_1"/>
                <Button Grid.Row="1" Content="Boissons" Background="White"  Margin="70,18,70,18"  />
                <Button Grid.Row="2" Content="Frites" Background="White"  Margin="70,18,70,18"/>
                <Button Grid.Row="3" Content="Commandes" Background="White"  Margin="70,18,70,18"/>
                <Button Grid.Row="4" Content="Profil" Background="White"  Margin="70,18,70,18"/>
                <Button Grid.Row="5" Content="Déconnecter" Background="White"  Margin="70,18,70,18"/>

            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Content="Ajouter un Burger" HorizontalAlignment="Right" Margin="0,0,20,0" Background="BlanchedAlmond" VerticalAlignment="Center"  Width="175" Height="30" Click="Button_Click"/>
                <Grid Grid.Row="1">
                    <ListBox x:Name="BurgersListBox" BorderThickness="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="5"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray">
                                    <StackPanel>
                                        <Image Source="{Binding cheminImage}" Width="150" Height="100" Margin="5"/>
                                        <TextBlock Text="{Binding Nom}" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding NumeroArticle}" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Prix, StringFormat='Prix: {0:C}'}" Foreground="Green" FontSize="12" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding Taille, StringFormat='Taille : {0}'}" FontSize="12" TextAlignment="Center"/>

                                        <!-- Ajout du label "Végétarienne" si EstVegetarienne est True -->
                                        <TextBlock FontSize="12" TextAlignment="Center" Foreground="Green">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value=""/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EstVegetarienne}" Value="True">
                                                            <Setter Property="Text" Value="Végétarienne"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                            <Button Content="Modifier" Padding="5" Margin="5"/>
                                            <Button Content="Supprimer" Padding="5" Margin="5"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
